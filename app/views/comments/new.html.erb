<main id="form-page">
  <div id="form-container">
    <h1>Add a comment</h1>
    <%= form_with(model: @comment, url: user_post_comments_path, method: :post) do |f| %>
      <%= f.label :text %>
      <%= f.text_area :text, resize: "none", required: true, placeholder: "Enter comment"  %>
      <%= f.submit "Add" %>
    <% end %>
  </div>
  <% if can? :destroy, @comment %>
  <%= button_to "Delete", comment_path(@comment), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>

</main>